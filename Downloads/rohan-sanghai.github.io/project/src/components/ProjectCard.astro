---
interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
}

const { title, description, image, link } = Astro.props;
---

<a href={link} class="group">
  <div class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-300">
    <img src={image} alt={title} class="w-full h-48 object-cover" />
    <div class="p-4">
      <h3 class="text-xl font-semibold mb-2 group-hover:text-blue-600">{title}</h3>
      <p class="text-gray-600">{description}</p>
    </div>
  </div>
</a>
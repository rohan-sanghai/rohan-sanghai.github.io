---
import Layout from '../../layouts/Layout.astro';

const { project } = Astro.params;

const projects = {
  'automated-assembly': {
    title: "Automated Assembly Line",
    description: "Design and implementation of a fully automated assembly system",
    coverImage: "https://images.unsplash.com/photo-1581092160562-40aa08e78837?w=1200&auto=format&fit=crop&q=80",
    content: "Led the development of a state-of-the-art automated assembly line that increased production efficiency by 45%. The project involved complex robotics integration, computer vision systems, and IoT sensors for real-time monitoring.",
    technologies: ["Robotics", "PLC Programming", "Computer Vision", "IoT"],
    images: [
      "https://images.unsplash.com/photo-1581092160607-ee67df11c6d0?w=800&auto=format&fit=crop&q=80",
      "https://images.unsplash.com/photo-1581092162176-2ad0eb8c8c82?w=800&auto=format&fit=crop&q=80"
    ]
  },
  'hvac-system': {
    title: "Sustainable HVAC System",
    description: "Energy-efficient HVAC design for commercial buildings",
    coverImage: "https://images.unsplash.com/photo-1581092162384-8987c1d64926?w=1200&auto=format&fit=crop&q=80",
    content: "Designed and implemented an innovative HVAC system that reduced energy consumption by 35% while maintaining optimal comfort levels. The project incorporated smart sensors and predictive maintenance capabilities.",
    technologies: ["Thermal Analysis", "Energy Modeling", "Smart Controls", "Sustainable Design"],
    images: [
      "https://images.unsplash.com/photo-1581092795360-fd1ca04f0952?w=800&auto=format&fit=crop&q=80",
      "https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?w=800&auto=format&fit=crop&q=80"
    ]
  },
  'ev-chassis': {
    title: "Electric Vehicle Chassis",
    description: "Lightweight chassis design for electric vehicles",
    coverImage: "https://images.unsplash.com/photo-1581092795360-fd1ca04f0952?w=1200&auto=format&fit=crop&q=80",
    content: "Developed a revolutionary lightweight chassis design that reduced vehicle weight by 25% while maintaining structural integrity. The project utilized advanced materials and topology optimization techniques.",
    technologies: ["CAD", "FEA", "Materials Engineering", "Topology Optimization"],
    images: [
      "https://images.unsplash.com/photo-1581092162384-8987c1d64926?w=800&auto=format&fit=crop&q=80",
      "https://images.unsplash.com/photo-1581092160562-40aa08e78837?w=800&auto=format&fit=crop&q=80"
    ]
  }
};

const projectData = projects[project];

if (!projectData) {
  return Astro.redirect('/404');
}
---

<Layout title={`${projectData.title} - Your Name`}>
  <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pt-20">
    <article class="py-8">
      <img 
        src={projectData.coverImage} 
        alt={projectData.title}
        class="w-full h-[400px] object-cover rounded-lg shadow-lg mb-8"
      />
      <h1 class="text-4xl font-bold mb-4">{projectData.title}</h1>
      <div class="flex gap-2 mb-6">
        {projectData.technologies.map(tech => (
          <span class="bg-gray-100 px-3 py-1 rounded-full text-sm">
            {tech}
          </span>
        ))}
      </div>
      <div class="prose max-w-none">
        <p class="text-lg leading-relaxed text-gray-700">{projectData.content}</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-8">
        {projectData.images.map(image => (
          <img 
            src={image} 
            alt="Project detail"
            class="rounded-lg shadow-sm w-full h-64 object-cover"
          />
        ))}
      </div>
    </article>
  </main>
</Layout>